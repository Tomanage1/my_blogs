<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.exam.myblogs.mapper.CommentMapper">

    <!-- 根据文章ID查询评论列表 -->
    <select id="selectCommentsByArticleId" resultType="com.exam.myblogs.entity.Comment">
        SELECT * FROM comment
        WHERE article_id = #{articleId}
        AND parent_id = 0  <!-- 只查询顶级评论 -->
        ORDER BY created_at DESC
    </select>

    <!-- 根据评论ID查询回复 -->
    <select id="selectRepliesByCommentId" resultType="com.exam.myblogs.entity.Comment">
        SELECT * FROM comment
        WHERE parent_id = #{commentId}
        ORDER BY created_at ASC
    </select>
</mapper>